<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiResizeIssueIOS.MainPage">
			 
    <ScrollView
		  VerticalOptions="FillAndExpand">
		
		<VerticalStackLayout
		    Margin="20"
		    VerticalOptions="FillAndExpand"
		    BackgroundColor="Purple">
		
		    <VerticalStackLayout
		        Margin="20"
		        BackgroundColor="Lime"
		        HeightRequest="600">
		
		        <Label Text="Other stuff" />
		
		    </VerticalStackLayout>
		
		    <Button
		        Margin="20"
		        Text="Toggle Address Details"
		        Clicked="OnToggleClicked"
		        HorizontalOptions="Center" />
		
		    <VerticalStackLayout
		        x:Name="AddressDetails"
		        IsVisible="False"
		        VerticalOptions="FillAndExpand"
		        BackgroundColor="Orange"
		        Margin="20">
		
		        <Label Text="Address Line 1" />
		        <Entry Placeholder="1 My Street" />
		
		        <Label Text="Address Line 2" />
		        <Entry Placeholder="" />
		
		        <Label Text="Address Line 3" />
		        <Entry Placeholder="" />
		
		        <Label Text="Address Line 4" />
		        <Entry Placeholder="" />
		
		    </VerticalStackLayout>
		
		</VerticalStackLayout>

	</ScrollView>
 
</ContentPage>

